{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"linterOptions": {
		"exclude": [
			"package.json"
		]
	},
	"jsRules": {},
	"rules": {
		"indent": [
			true,
			"tabs"
		],
		"ordered-imports": true,
		"object-literal-sort-keys": false,
		"await-promise": [
			true,
			"Thenable"
		],
		"curly": [
			true,
			"ignore-same-line"
		],
		"no-eval": true,
		"prefer-const": true,
		"no-return-await": true,
		"cyclomatic-complexity": [
			true,
			20
		],
		"eofline": true,
		"variable-name": [
			true,
			"ban-keywords",
			"check-format",
			"allow-leading-underscore",
			"allow-pascal-case"
		]
	},
	"rulesDirectory": []
}