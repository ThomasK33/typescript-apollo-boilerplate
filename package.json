{
	"name": "typescript-apollo-boilerplate",
	"version": "1.0.1",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc -p tsconfig.json && cpx tsconfig.json dist/ && cpx package.json dist/",
		"build:clean": "run-s clean build",
		"clean": "run-p clean:*",
		"clean:dist": "rimraf dist",
		"dev": "nodemon",
		"new:module": "hygen module new",
		"new:directive": "hygen directive new",
		"new:directiveResolver": "hygen directiveResolver new",
		"start": "cross-env TS_NODE_PROJECT=dist/ node -r tsconfig-paths/register dist/src/index.js",
		"start:clean": "run-s clean build start",
		"start:ts": "ts-node -r tsconfig-paths/register --files src/index.ts",
		"start:verbose": "cross-env TS_NODE_PROJECT=dist/ DEBUG=app:* node -r tsconfig-paths/register dist/src/index.js",
		"validate": "cross-env CI=true run-p build test lint",
		"validate:coverage": "run-s coverage:report coverage:check",
		"lint": "tslint -p tsconfig.json",
		"test": "cross-env TEST=true mocha -r ts-node/register -r tsconfig-paths/register -r dotenv/config 'tests/index.spec.ts'",
		"test:dev": "nodemon --config nodemonTest.json",
		"test:record": "cross-env RECORD=true npm run test",
		"coverage": "run-s coverage:report coverage:open",
		"coverage:check": "nyc check-coverage --lines 95 --functions 95 --branches 95",
		"coverage:report": "nyc npm run test",
		"coverage:open": "opn coverage/index.html",
		"types": "graphql-codegen --config codegen.yml"
	},
	"husky": {
		"hooks": {
			"pre-push": "npm run validate"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ThomasK33/typescript-apollo-boilerplate.git"
	},
	"author": "Thomas Kosiewski",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ThomasK33/typescript-apollo-boilerplate/issues"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^1.0.7",
		"@types/body-parser": "^1.17.0",
		"@types/chai": "^4.1.7",
		"@types/chai-as-promised": "^7.1.0",
		"@types/cookie-parser": "^1.4.1",
		"@types/debug": "4.1.3",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^4.16.1",
		"@types/express-jwt": "0.0.42",
		"@types/express-unless": "0.5.1",
		"@types/graphql": "^14.2.0",
		"@types/helmet": "0.0.43",
		"@types/jsonwebtoken": "^8.3.2",
		"@types/mocha": "^5.2.6",
		"@types/node": "^11.13.0",
		"@types/ws": "^6.0.1",
		"@types/wtfnode": "^0.7.0",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"cpx": "^1.5.0",
		"debug": "^4.1.1",
		"husky": "^1.3.1",
		"mocha": "^6.1.0",
		"nodemon": "^1.18.10",
		"npm-run-all": "^4.1.5",
		"nyc": "^13.3.0",
		"opn-cli": "^4.1.0",
		"rimraf": "^2.6.3",
		"ts-node": "^8.0.3",
		"tsconfig-paths": "^3.8.0",
		"tslint": "^5.15.0",
		"typescript": "^3.4.2",
		"wtfnode": "^0.8.0",
		"@graphql-codegen/typescript": "1.0.7",
		"@graphql-codegen/typescript-resolvers": "1.0.7"
	},
	"dependencies": {
		"apollo-server-express": "^2.4.8",
		"body-parser": "^1.18.3",
		"cookie-parser": "^1.4.4",
		"cross-env": "^5.2.0",
		"dotenv": "^7.0.0",
		"dotenv-expand": "^5.1.0",
		"express": "^4.16.4",
		"express-jwt": "^5.3.1",
		"graphql": "^14.2.1",
		"graphql-subscriptions": "^1.1.0",
		"graphql-tools": "^4.0.4",
		"helmet": "^3.16.0",
		"jsonwebtoken": "^8.5.1",
		"subscriptions-transport-ws": "^0.9.16"
	}
}
