{
	"name": "typescript-apollo-boilerplate",
	"version": "1.0.0",
	"description": "",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "npx tsc -p tsconfig.json && cp tsconfig.json dist/",
		"build:clean": "run-s clean build",
		"clean": "cd dist && rm -rf *",
		"lint": "npx tslint -p tsconfig.json",
		"start": "TS_NODE_PROJECT=dist/ node -r tsconfig-paths/register dist/src/index.js",
		"start:dev": "npx nodemon",
		"start:clean": "run-s clean build start",
		"start:ts": "npx ts-node -r tsconfig-paths/register src/index.ts",
		"test": "npx mocha -r ts-node/register -r tsconfig-paths/register 'tests/**/*.spec.ts'",
		"validate": "run-p build lint test"
	},
	"husky": {
		"hooks": {
			"pre-push": "npm run validate"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ThomasK33/typescript-apollo-boilerplate.git"
	},
	"author": "Thomas Kosiewski",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ThomasK33/typescript-apollo-boilerplate/issues"
	},
	"devDependencies": {
		"@types/body-parser": "^1.17.0",
		"@types/chai": "^4.1.3",
		"@types/cookie-parser": "^1.4.1",
		"@types/debug": "0.0.30",
		"@types/dotenv": "^4.0.3",
		"@types/express": "^4.11.1",
		"@types/express-jwt": "0.0.40",
		"@types/express-unless": "0.0.32",
		"@types/graphql": "^0.13.1",
		"@types/helmet": "0.0.37",
		"@types/jsonwebtoken": "^7.2.7",
		"@types/mocha": "^5.2.0",
		"@types/node": "^10.1.2",
		"@types/ws": "^5.1.1",
		"chai": "^4.1.2",
		"husky": "^1.0.0-rc.6",
		"mocha": "^5.2.0",
		"nodemon": "^1.17.4",
		"npm-run-all": "^4.1.3",
		"ts-node": "^6.0.3",
		"tslint": "^5.10.0",
		"typescript": "^2.8.3"
	},
	"dependencies": {
		"apollo-server-express": "^1.3.6",
		"body-parser": "^1.18.3",
		"cookie-parser": "^1.4.3",
		"debug": "^3.1.0",
		"dotenv": "^5.0.1",
		"dotenv-expand": "^4.2.0",
		"express": "^4.16.3",
		"express-jwt": "^5.3.1",
		"graphql": "^0.13.2",
		"graphql-playground-middleware-express": "^1.6.2",
		"graphql-subscriptions": "^0.5.8",
		"graphql-tools": "^3.0.1",
		"helmet": "^3.12.1",
		"jsonwebtoken": "^8.2.1",
		"subscriptions-transport-ws": "^0.9.9",
		"tsconfig-paths": "^3.3.2"
	}
}